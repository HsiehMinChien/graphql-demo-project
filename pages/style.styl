css-setting($bgcolor)
  position: relative
  margin-left: 20%
  .page-section-title
    &::before
      content: "";
      width: 50px;
      height: 50px;
      position: absolute;
      z-index: -1;
      top: -7px;
      left: -3%;
      background: $bgcolor;
      border-radius: 50%;
      display: inline-flex;
      justify-content: center;
      align-items: center;

.page-job-select-type
  css-setting(#ABEBC6)
  margin-bottom: 30px
  .ant-btn
    margin-left: 4%
    position: absolute
    top: 4px;
    right: 20%;
  .selected-types
    margin-left: 4%
    margin-right: 20%
    display: flex
    flex-wrap: wrap
    > div
      padding: 5px 10px
      margin: 5px
      background-color: #E8F8F5
      border-radius: 10%

.page-jobs-list
  css-setting(#4dc9ff)

.all-page-layout
  .page-top
    background-size: cover
    background-image: url('/img/bg.jpg')
    text-align: center
    width: 100%
    height: 300px
    padding-top: 100px
    margin-bottom: 40px
    > h1
      color: white
      font-size: 60px
      text-shadow: 4px 5px 7px #000;

