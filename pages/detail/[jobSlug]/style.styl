.all-page-layout.detail-page
  background-color: #eee
  padding-bottom: 40px
  min-height: 1024px
  .detail-page-top
    width: 100%
    height: 25px
    background-color: #eee
    margin-bottom: 40px


  .detail-page-content
    margin: 40px 20%
    padding: 20px
    border-radius: 10px
    background-color: rgba(255, 255, 255, 0.8)
    box-shadow: 2px 2px 2px 1px rgba(0, 0, 0, 0.2);
    .display-tags
      padding-top: 10px
      padding-bottom: 15px
      margin-bottom: 25px
      border-bottom: 1px solid #AEB6BF
      > h4
        margin-bottom: 1em
    .anticon.anticon-left-circle
      position: absolute
      top: 14px
      svg
        width: 40px
        height: 40px
    .apply-link
      position: absolute
      top: 11px
      right: 21%
      border: 1px solid
      padding: 5px 20px
      font-size: 20px
      border-radius: 5px
      background-color: rgb(24, 144, 255)
      color: #fff